<Window x:Class="SHNK.Tools.App.ResetGuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Guest"
        Width="154" Height="118"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#111111">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Reset Guest"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="SemiBold"/>

        <UniformGrid Grid.Row="2" Columns="4" Rows="1">
            <Button Content="GL" Margin="6,6,6,3" Click="Gl_Click"/>
            <Button Content="KR" Margin="6,6,6,3" Click="Kr_Click" RenderTransformOrigin="0.448,-0.243"/>
            <Button Content="VNG" Margin="6,6,4,3" Click="Vng_Click"/>
            <Button Content="TW" Margin="6,6,0,3" Click="Tw_Click"/>
        </UniformGrid>
    </Grid>
</Window>
