<Window x:Class="SHNK.Tools.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SHNK TOOLS"
        Width="980" Height="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <LinearGradientBrush x:Key="RgbStroke" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFF3B3B" Offset="0"/>
            <GradientStop Color="#FFFFD93B" Offset="0.2"/>
            <GradientStop Color="#FF3BFF7A" Offset="0.4"/>
            <GradientStop Color="#FF3BD7FF" Offset="0.6"/>
            <GradientStop Color="#FF7A3BFF" Offset="0.8"/>
            <GradientStop Color="#FFFF3BD7" Offset="1"/>
            
        </LinearGradientBrush>

        <Style x:Key="NeonBtn" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="18"
                                BorderThickness="2"
                                BorderBrush="{StaticResource RgbStroke}">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF00E5FF"
                                                  BlurRadius="25"
                                                  ShadowDepth="0"
                                                  Opacity="0.7"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="24"
            BorderThickness="4"
            BorderBrush="{StaticResource RgbStroke}">
        <Grid>

            <!-- الخلفية -->
            <Image Source="Assets/ui_bg.jpg" Stretch="Fill"/>
            <Rectangle Fill="#66000000"/>

            <!-- أزرار العنوان -->
            <Grid Height="45" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Margin="0,8,12,0"
                            Panel.ZIndex="50">

                    <Button Width="36" Height="26"
                            Content="—"
                            Click="Minimize_Click"/>

                    <Button Width="36" Height="26"
                            Margin="8,0,0,0"
                            Content="✕"
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <!-- العنوان -->
            <TextBlock Text="SHNK TOOLS"
                       FontSize="42"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,55,0,0"/>

            <!-- الأزرار -->
            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Width="300" Height="80"
                            Style="{StaticResource NeonBtn}"
                            Content="Cleaner Gameloop"
                            Click="Cleaner_Click" Margin="32,0,2,0" Grid.ColumnSpan="2"/>

                    <Button Grid.Column="2"
                            Width="200" Height="80"
                            Style="{StaticResource NeonBtn}"
                            Content="Fix Gl"
                            Click="FixGl_Click"/>

                    <Button Grid.Column="4"
                            Width="200" Height="80"
                            Style="{StaticResource NeonBtn}"
                            Content="Fix Kr"
                            Click="FixKr_Click"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Width="360" Height="85"
                            Style="{StaticResource NeonBtn}"
                            Content="Clear Temp + Cache"
                            Click="ClearTemp_Click" Margin="53,58,53,-58"/>

                    <Button Grid.Column="2"
                            Width="360" Height="85"
                            Style="{StaticResource NeonBtn}"
                            Content="Install Emu 32"
                            Click="Install32_Click" Margin="53,58,53,-58"/>
                </Grid>
            </Grid>

            <!-- Drag Area (ما يغطي الأزرار) -->
            <Rectangle Height="110"
                       VerticalAlignment="Top"
                       Fill="Transparent"
                       MouseLeftButtonDown="DragBar_MouseLeftButtonDown" Margin="0,0,96,0"/>

        </Grid>
    </Border>
</Window>
